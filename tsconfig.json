{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./electron/*"],
      "~/*": ["./src/*"]
    },
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "allowJs": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true ,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["electron/**/*", "src/**/*"],
  "exclude": []
}
